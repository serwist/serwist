{
  "name": "@serwist/next",
  "version": "10.0.0-preview.12",
  "type": "module",
  "sideEffects": false,
  "description": "A module that integrates Serwist into your Next.js application.",
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "serwist",
    "serwistjs",
    "sw",
    "service worker",
    "progressive web apps",
    "web",
    "service-worker",
    "progressive-web-apps",
    "next",
    "next.js",
    "pwa"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "author": "Serwist <ducanh2912.rusty@gmail.com> (https://serwist.pages.dev/)",
  "license": "MIT",
  "repository": "https://github.com/serwist/serwist",
  "bugs": "https://github.com/serwist/serwist/issues",
  "homepage": "https://serwist.pages.dev",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "worker": [
        "./dist/index.worker.d.ts"
      ],
      "typings": [
        "./dist/sw-entry.d.ts"
      ],
      "schema": [
        "./dist/index.schema.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./worker": {
      "types": "./dist/index.worker.d.ts",
      "default": "./dist/index.worker.js"
    },
    "./typings": {
      "types": "./dist/sw-entry.d.ts"
    },
    "./schema": {
      "types": "./dist/index.schema.d.ts",
      "default": "./dist/index.schema.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rimraf dist && NODE_ENV=production rollup --config rollup.config.js",
    "dev": "rollup --config rollup.config.js --watch",
    "lint": "biome lint ./src",
    "qcheck": "biome check ./src",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@serwist/build": "workspace:*",
    "@serwist/utils": "workspace:*",
    "@serwist/webpack-plugin": "workspace:*",
    "@serwist/window": "workspace:*",
    "chalk": "5.4.1",
    "glob": "11.0.3",
    "serwist": "workspace:*",
    "zod": "4.0.5"
  },
  "devDependencies": {
    "@serwist/configs": "workspace:*",
    "@types/node": "24.0.14",
    "next": "15.4.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "rollup": "4.45.1",
    "type-fest": "4.41.0",
    "typescript": "5.8.3",
    "webpack": "5.100.2"
  },
  "peerDependencies": {
    "next": ">=14.0.0",
    "typescript": ">=5.0.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  }
}
