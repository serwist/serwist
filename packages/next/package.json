{
  "name": "@serwist/next",
  "version": "9.0.0-preview.0",
  "type": "module",
  "description": "A module that integrates Serwist into your Next.js application.",
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "serwist",
    "serwistjs",
    "sw",
    "service worker",
    "web",
    "service-worker"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Serwist's Team",
  "license": "MIT",
  "repository": "serwist/serwist",
  "bugs": "https://github.com/serwist/serwist/issues",
  "homepage": "https://serwist.pages.dev",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "worker": [
        "./dist/index.worker.d.ts"
      ],
      "typings": [
        "./dist/sw-entry.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./worker": {
      "types": "./dist/index.worker.d.ts",
      "default": "./dist/index.worker.js"
    },
    "./typings": {
      "types": "./dist/sw-entry.d.ts"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "rimraf dist && cross-env NODE_ENV=production rollup --config rollup.config.js",
    "dev": "rollup --config rollup.config.js --watch",
    "lint": "biome lint ./src",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@serwist/build": "workspace:*",
    "@serwist/core": "workspace:*",
    "@serwist/webpack-plugin": "workspace:*",
    "@serwist/window": "workspace:*",
    "clean-webpack-plugin": "4.0.0",
    "fast-glob": "3.3.2"
  },
  "devDependencies": {
    "@serwist/constants": "workspace:*",
    "@serwist/sw": "workspace:*",
    "@serwist/utils": "workspace:*",
    "@types/node": "20.11.16",
    "chalk": "5.3.0",
    "next": "14.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rollup": "4.9.6",
    "type-fest": "4.10.2",
    "typescript": "5.4.0-dev.20240203",
    "webpack": "5.90.1"
  },
  "peerDependencies": {
    "@serwist/sw": "workspace:*",
    "next": ">=14.0.0",
    "typescript": ">=5.0.0",
    "webpack": ">=5.9.0"
  },
  "peerDependenciesMeta": {
    "@serwist/sw": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  }
}
