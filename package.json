{
  "name": "serwist-project",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "docs",
    "packages/**",
    "examples/**",
    "!examples/**/.next"
  ],
  "scripts": {
    "build": "cross-env FORCE_COLOR=1 turbo run build --filter=./packages/*",
    "deps": "node ncu.js",
    "format": "prettier --write",
    "format:all": "pnpm format .",
    "format:check": "prettier --check .",
    "lint": "cross-env NODE_OPTIONS='--max-old-space-size=4096' FORCE_COLOR=1 turbo run lint --concurrency=50% --filter=./packages/*",
    "lint:fix": "pnpm lint -- --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "publish-packages": "pnpm typecheck && pnpm lint && cross-env PUBLISH=true pnpm build && changeset publish",
    "typecheck": "cross-env FORCE_COLOR=1 turbo run typecheck"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.4.8",
    "@changesets/cli": "2.26.2",
    "@types/node": "20.8.7",
    "@types/shell-quote": "1.7.2",
    "@typescript-eslint/eslint-plugin": "6.8.0",
    "@typescript-eslint/parser": "6.8.0",
    "cross-env": "7.0.3",
    "eslint": "8.51.0",
    "eslint-config-next": "13.5.5",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-turbo": "1.10.15",
    "eslint-plugin-import": "2.28.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "fast-glob": "3.3.1",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "15.0.1",
    "npm-check-updates": "16.14.6",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.6",
    "rimraf": "5.0.5",
    "shell-quote": "1.8.1",
    "tslib": "2.6.2",
    "turbo": "1.10.15",
    "typescript": "5.3.0-dev.20231018"
  },
  "packageManager": "pnpm@8.7.5"
}
