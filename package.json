{
  "name": "serwist-project",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "docs",
    "packages/**",
    "examples/**",
    "!examples/**/.next"
  ],
  "scripts": {
    "build": "cross-env FORCE_COLOR=1 turbo run build --filter=./packages/*",
    "deps": "node ncu.js",
    "docs:build": "cross-env FORCE_COLOR=1 turbo run build --filter=./docs",
    "format": "prettier --write",
    "format:all": "pnpm format .",
    "format:check": "prettier --check .",
    "lint": "cross-env NODE_OPTIONS='--max-old-space-size=4096' FORCE_COLOR=1 turbo run lint --concurrency=50% --filter=./packages/*",
    "lint:fix": "pnpm lint -- --fix",
    "lint-staged": "lint-staged",
    "prepare": "husky install",
    "publish-packages": "pnpm typecheck && cross-env PUBLISH=true pnpm build && changeset publish",
    "typecheck": "cross-env FORCE_COLOR=1 turbo run typecheck"
  },
  "devDependencies": {
    "@changesets/changelog-github": "0.5.0",
    "@changesets/cli": "2.27.1",
    "@types/node": "20.10.5",
    "@types/shell-quote": "1.7.5",
    "@typescript-eslint/eslint-plugin": "6.15.0",
    "@typescript-eslint/parser": "6.15.0",
    "cross-env": "7.0.3",
    "eslint": "8.56.0",
    "eslint-config-next": "14.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-turbo": "1.11.2",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-simple-import-sort": "10.0.0",
    "eslint-plugin-svelte": "2.36.0-next.3",
    "fast-glob": "3.3.2",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "lint-staged": "15.2.0",
    "npm-check-updates": "16.14.12",
    "prettier": "3.1.1",
    "prettier-plugin-svelte": "3.1.2",
    "prettier-plugin-tailwindcss": "0.5.9",
    "rimraf": "5.0.5",
    "shell-quote": "1.8.1",
    "tslib": "2.6.2",
    "turbo": "1.11.2",
    "typescript": "5.4.0-dev.20231220"
  },
  "packageManager": "pnpm@8.7.5"
}
