{
  "name": "serwist-project",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "__tests__",
    "__tests__/*",
    "docs",
    "packages/*",
    "packages/$legacy/*",
    "packages/$private/*",
    "examples/**",
    "!examples/**/.next/**",
    "!examples/**/.output",
    "serwist-e2e-test"
  ],
  "scripts": {
    "bump": "changeset version && changeset tag",
    "build": "FORCE_COLOR=1 turbo run build --concurrency=70% --filter='./packages/*' --filter='./packages/$legacy/*' --filter='./packages/$private/*'",
    "build:docs": "FORCE_COLOR=1 turbo run build --filter='./docs'",
    "build:modern": "FORCE_COLOR=1 turbo run build --filter='./packages/*' --filter='./packages/$private/*'",
    "code-check": "biome check --max-diagnostics=150 --log-kind=compact .",
    "code-check:apply": "pnpm code-check --apply",
    "deps": "node ncu.js",
    "dev": "FORCE_COLOR=1 turbo run dev --concurrency=24 --filter='./packages/*' --filter='./packages/$private/*'",
    "dev:no-server": "FORCE_COLOR=1 turbo run dev --concurrency=24 --filter='./packages/*' --filter='./packages/$private/*' --filter='!./packages/nuxt'",
    "format": "biome format --max-diagnostics=100 --log-kind=compact",
    "format:docs": "pnpm prettier --write 'docs/**/*.{svelte,css}' && pnpm format docs --write",
    "format:changesets": "pnpm prettier --write '.changeset/**/*.md'",
    "format:all": "pnpm format .",
    "format:write": "pnpm format:all --write",
    "lint": "FORCE_COLOR=1 turbo run lint --continue --concurrency=50% --filter='./packages/*' --filter='./packages/$private/*' --filter='./packages/$legacy/*'",
    "lint:docs": "pnpm eslint docs --fix --ext .svelte && FORCE_COLOR=1 turbo run lint --filter=./docs -- --apply",
    "lint:all": "biome lint --max-diagnostics=100 --log-kind=compact .",
    "lint:fix": "pnpm lint -- --apply",
    "publish-packages": "pnpm build && pnpm typecheck && changeset publish",
    "version-packages": "changeset version && pnpm format:write",
    "test": "FORCE_COLOR=1 turbo run test",
    "typecheck": "FORCE_COLOR=1 turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.2",
    "@eslint/js": "9.25.0",
    "@swc/core": "1.11.21",
    "@types/eslint-config-prettier": "6.11.3",
    "@types/node": "22.14.1",
    "@types/shell-quote": "1.7.5",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.30.1",
    "eslint": "9.25.0",
    "eslint-config-prettier": "10.1.2",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-svelte": "3.5.1",
    "eslint-plugin-turbo": "2.5.0",
    "fast-glob": "3.3.3",
    "globals": "16.0.0",
    "npm-check-updates": "17.1.18",
    "prettier-plugin-svelte": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.11",
    "rimraf": "5.0.9",
    "shell-quote": "1.8.2",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "turbo": "2.5.0",
    "typescript": "5.6.3",
    "typescript-eslint": "8.30.1"
  },
  "packageManager": "pnpm@10.8.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "core-js",
      "esbuild",
      "sharp"
    ]
  }
}
