{
  "name": "serwist-project",
  "type": "module",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "__tests__",
    "__tests__/*",
    "packages/*",
    "packages/$private/*",
    "examples/**",
    "!examples/**/.next/**",
    "!examples/**/.output",
    "serwist-e2e-test"
  ],
  "scripts": {
    "bump": "changeset version && changeset tag",
    "build": "FORCE_COLOR=1 turbo run build --filter='./packages/*' --filter='./packages/$private/*'",
    "build:docs": "FORCE_COLOR=1 turbo run build --filter='./docs'",
    "code-check": "biome check --max-diagnostics=150 --log-kind=compact .",
    "code-check:apply": "pnpm code-check --write",
    "deps": "node ncu.js",
    "dev": "FORCE_COLOR=1 turbo run dev --concurrency=24 --filter='./packages/*' --filter='./packages/$private/*'",
    "dev:no-server": "FORCE_COLOR=1 turbo run dev --concurrency=24 --filter='./packages/*' --filter='./packages/$private/*' --filter='!./packages/nuxt'",
    "format": "biome format --max-diagnostics=100 --log-kind=compact",
    "format:changesets": "pnpm prettier --write '.changeset/**/*.md'",
    "format:all": "pnpm format .",
    "format:write": "pnpm format:all --write",
    "lint": "FORCE_COLOR=1 turbo run lint --continue --concurrency=50% --filter='./packages/*' --filter='./packages/$private/*'",
    "lint:all": "biome lint --max-diagnostics=100 --log-kind=compact .",
    "lint:fix": "pnpm lint -- --write",
    "qcheck": "FORCE_COLOR=1 turbo run qcheck --continue --concurrency=50% --filter='./packages/*' --filter='./packages/$private/*'",
    "qcheck:fix": "pnpm qcheck -- --write",
    "publish-packages": "pnpm build && pnpm typecheck && changeset publish",
    "version-packages": "changeset version && pnpm format:write",
    "test": "FORCE_COLOR=1 turbo run test",
    "typecheck": "FORCE_COLOR=1 turbo run typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@changesets/changelog-github": "0.5.1",
    "@changesets/cli": "2.29.6",
    "@swc/core": "1.13.5",
    "@types/node": "24.3.0",
    "@types/shell-quote": "1.7.5",
    "fast-glob": "3.3.3",
    "npm-check-updates": "18.0.2",
    "rimraf": "6.0.1",
    "shell-quote": "1.8.3",
    "ts-node": "10.9.2",
    "tslib": "2.8.1",
    "turbo": "2.5.6",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.15.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "@tailwindcss/oxide",
      "core-js",
      "esbuild",
      "sharp"
    ]
  }
}
